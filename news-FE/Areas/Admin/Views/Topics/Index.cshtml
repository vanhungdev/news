@{
    ViewBag.Title = "Quản lý chủ đề bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<news_FE.Models.Topic>
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lý chủ đề bài viết</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Bdmin">Home</a></li>
                <li class="breadcrumb-item active m-0">Quản lý chủ đề bài viết</li>
            </ol>
        </div>
    </div>
</div>

<section class=" ">
    <div class=" bg-white card p-3 ">

        <div class="row">
            <div class="col-md-9  w-100 ">
            </div>
            <div class="col-md-3 ">
                <div class=" pt-1 ml-5">
                    <a title="Thêm bài loại viết" data-toggle="tooltip" data-placement="top" class="text-white btn-sm btn-success" href="~/Admin/Topics/Create">Add Topic <i class="fas fa-plus"></i></a>
                    <a title="Thùng rác" data-toggle="tooltip" data-placement="top" class="text-white btn-sm btn-danger " href="~/Admin/Topics/trash">Thùng rác<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th width="30%">Tên chủ đề</th>
                            <th width="20%">Link</th>
                            <th width="20%">Trạng thái</th>
                            <th width="20%">Chức Năng</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td> <a class=" font-weight-bold card-link " href="">@item.Name</a></td>
                            <td> @Html.DisplayFor(modelItem => item.Slug)</td>

                            @if (item.Status == 1)
                            {
                                <th width="20%"> <span class="badge badge-success"> Hiển thị</span>  </th>
                            }
                            else
                            {
                                <th width="20%"><span class="badge badge-danger"> Đang ẩn</span> </th>
                            }
                            <td>
                                @if (item.Status == 1)
                                {
                                    <a title="Thay đổi trạng thái" data-toggle="tooltip" data-placement="top" class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "topics", new { Id = item.Id , Status = item.Status })"> <i class="fas fa-toggle-on"></i> </a>
                                }
                                else
                                {
                                    <a title="Thay đổi trạng thái" data-toggle="tooltip" data-placement="top" class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "topics", new { id = item.Id  , Status = item.Status })"> <i class="fas fa-toggle-off"></i> </a>
                                }
                                <a title="Xóa vào thùng rác" data-toggle="tooltip" data-placement="top" class="btn btn-sm btn-light text-danger border" href="@Url.Action("Detrash", "topics", new { id = item.Id })"> <i class="fas fa-trash-alt"></i></a>
                                <a title="Chỉnh sửa" data-toggle="tooltip" data-placement="top" class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "topics", new { id = item.Id })">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="text-cam">@Html.DisplayFor(modelItem => item.Id)</td>
                        </tr>
                            }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    $("#topic").addClass("active");
</script>
