@model news_FE.Models.Post
@{
    ViewBag.Title = "Chi tiết bài viết";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="p-3 ">
                <form action="~/Site/sendComment" method="post">
                    <h4>Bình luận</h4>
                    <input type="hidden" name="PostId" value="@Model.ID" />
                    <input type="hidden" name="parentId" value="0" />
                    <input type="hidden" name="slug" value="@Model.Slug" />
                    <div class="p-2">
                        <label> Tên bạn</label>
                        <input class="form-control" name="name" required />
                    </div>
                    <div class="p-2">
                        <label> Nội dung</label>
                        <textarea class="form-control" name="commentDetail" rows="3" required></textarea>
                    </div>
                    <div class="mb-3"> <button class="btn btn-sm btn-info w-100 pt-1" type="submit">Gửi</button></div>
                </form>
                @Html.Action("_getAllComment", "Modules", new { Id = Model.ID, slug = Model.Slug })
            </div>
        </div>
        <div class="col-9 bg-light mt-3">
            <h1 class="p-5">@Model.Title</h1>
            <p class="text-center"> @Html.Raw(Model.Detail)</p>
        </div>
    </div>
</div>
<style>
    .title {
        font-size: 14px;
        font-weight: bold;
    }

    .komen {
        font-size: 14px;
    }

    .geser {
        margin-left: 55px;
        margin-top: 5px;
    }
</style>

