@model IEnumerable<news_FE.Models.Post>
@{
    ViewBag.Title = "Index";
}
<!-- /navbar-->
<section class="pt-3">
    <div class="container  pt">
        <div class="row">
            <div class="col-md-8 bg-white">

                @foreach (var item in Model)
                {
                    string title = item.Title;
                    <ul class="list-unstyled pagination border-top pt-3">
                        <li><img width="200" src="~/public/images/post/@item.Img" alt=""></li>
                        <li class="pl-3">
                            <a class="card-link text-dark" href="~/chi-tiet-bai-viet/@item.Slug">
                                @if (title.Length > 70)
                                {
                                    <span class="font-weight-bold " style="font-size:15px;">@title.Substring(0, 70) ....</span>
                                }
                                else
                                {
                                    <span class="font-weight-bold " style="font-size:15px;">@title</span>
                                }
                            </a>
                            <br />
                            <span style="font-size:12px;" class="text-info"><i class="far fa-clock"></i> @item.Created_at</span>
                        </li>

                    </ul>
                }
            </div>  
            <div class="col-md-3">
                @Html.Action("_allCategory", "Modules")
            </div>
        </div>

    </div>
</section>